<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    tools:context=".Sign_up">

    <ImageView
        android:id="@+id/imvsignup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bgsign_in_form"
        app:layout_constraintBottom_toTopOf="@id/horbwh"
        app:layout_constraintLeft_toLeftOf="@id/verkiri"
        app:layout_constraintRight_toRightOf="@id/verkanan"
        app:layout_constraintTop_toBottomOf="@+id/horats" />

    <TextView
        android:id="@+id/tvcreate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="14sp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Create an account"
        android:textColor="@color/black"
        android:textFontWeight="700"
        app:layout_constraintBottom_toTopOf="@id/tvhorbwh"
        app:layout_constraintDimensionRatio="4"
        app:layout_constraintLeft_toLeftOf="@id/tvverkiri"
        app:layout_constraintRight_toRightOf="@id/tvverkanan"
        app:layout_constraintTop_toTopOf="@+id/tvhorats" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/email_username"
        android:drawableStart="@drawable/icon_username"
        android:drawablePadding="26dp"
        android:fontFamily="@font/poppins_regular"
        android:autoSizeTextType="uniform"
        android:hint="Username"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="5.2:1"
        app:layout_constraintBottom_toTopOf="@id/ethoruser"
        app:layout_constraintTop_toBottomOf="@id/tvhorbwh"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/birth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/email_username"
        android:drawableStart="@drawable/icon_calender"
        android:drawablePadding="26dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Date of birth"
        android:paddingLeft="18dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="5.2:1"
        app:layout_constraintBottom_toTopOf="@id/ethordate"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/ethoruser" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/email_username"
        android:drawableStart="@drawable/icon_phone"
        android:drawablePadding="24dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Phone number"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/ethorphone"
        app:layout_constraintDimensionRatio="5.2:1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/ethordate" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/email_username"
        android:drawableStart="@drawable/icon_email"
        android:drawablePadding="26dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="5.2:1"
        app:layout_constraintBottom_toTopOf="@id/ethoremail"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/ethorphone" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/email_username"
        android:drawableStart="@drawable/iconlock"
        android:drawablePadding="22dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="5.2:1"
        app:layout_constraintBottom_toTopOf="@id/ethorpass"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/ethoremail" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/konfirm_pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/email_username"
        android:drawableStart="@drawable/iconlock"
        android:drawablePadding="22dp"
        android:fontFamily="@font/poppins_regular"
        android:hint="Konfirmasi password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="5.2:1"
        app:layout_constraintBottom_toTopOf="@id/ethorconpass"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/ethorpass"/>

    <Button
        android:id="@+id/btnget"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/gradient_sign"
        android:fontFamily="@font/poppins_regular"
        android:text="Get started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="7:1.3"
        app:layout_constraintBottom_toTopOf="@id/btnhor"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/ethorconpass"/>

    <Button
        android:id="@+id/already"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/poppins_regular"
        android:text="Already have an account? Log in"
        android:textAllCaps="false"
        android:textColor="@color/darkgrey"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintDimensionRatio="7"
        app:layout_constraintBottom_toTopOf="@id/horbwh"
        app:layout_constraintLeft_toLeftOf="@id/etverkiri"
        app:layout_constraintRight_toRightOf="@id/etverkanan"
        app:layout_constraintTop_toBottomOf="@id/btnhoralready"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/logoapp"
        app:layout_constraintBottom_toTopOf="@id/horimgbwh"
        app:layout_constraintLeft_toLeftOf="@id/imgverkiri"
        app:layout_constraintRight_toRightOf="@id/imgverkanan"
        app:layout_constraintTop_toBottomOf="@id/horimgats" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verkiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verkanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horbwh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tvverkiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tvverkanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tvhorats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/tvhorbwh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/etverkiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/etverkanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ethoruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ethordate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ethorphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ethoremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ethorpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ethorconpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnhor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horimgats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horimgbwh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imgverkiri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/imgverkanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/btnhoralready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />


</androidx.constraintlayout.widget.ConstraintLayout>