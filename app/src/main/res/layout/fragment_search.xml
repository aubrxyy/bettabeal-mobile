<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment"
    android:background="@drawable/background_app"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- pembungkus untuk semua bagian yg ada -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- pembungkus untuk bagian header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/btnatas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_white"
                android:src="@drawable/icon_burger_menu"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:id="@+id/tvsearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginLeft="90dp"
                android:layout_gravity="center"
                />
            <ImageButton
                android:id="@+id/btncart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_white"
                android:src="@drawable/icon_shopping_cart"
                android:layout_marginLeft="40dp"
                />
            <ImageButton
                android:id="@+id/btnatassmpg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_white"
                android:src="@drawable/icon_notifications"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>