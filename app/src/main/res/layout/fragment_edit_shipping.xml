<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditShipping"
    android:background="@drawable/background_app">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/lnatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnbackship"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:background="@null"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Shipping Address"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>

    <!-- Form Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintTop_toBottomOf="@+id/lnatas"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <!-- Name Field -->
        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/etnama"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="28dp"/>
        </FrameLayout>

        <!-- Address Field -->
        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="28dp"/>
        </FrameLayout>

        <!-- District Field -->
        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subdistrict"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <AutoCompleteTextView
                android:id="@+id/acDistrict"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="28dp"/>
        </FrameLayout>

        <!-- Poscode Field -->
        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pos code"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <AutoCompleteTextView
                android:id="@+id/acPoscode"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="28dp"/>
        </FrameLayout>

        <!-- Phone Number Field -->
        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="@color/darkgrey"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="28dp"
                android:inputType="phone"/>
        </FrameLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/backadrs"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/gradient_btn_white"
                android:fontFamily="@font/poppins_regular"
                android:text="Back"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/btnUpdateAddress"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:background="@drawable/gradient_profile"
                android:fontFamily="@font/poppins_regular"
                android:text="Save"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>