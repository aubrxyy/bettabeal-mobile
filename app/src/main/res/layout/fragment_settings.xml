<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment"
    android:background="@drawable/background_app"
    android:id="@+id/setting">

    <LinearLayout
        android:id="@+id/lnatas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btnbacksettings"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:src="@drawable/icon_arrow_back"
            android:background="@drawable/shape_white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lnatas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal information"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            />

        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/grey"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
            
                android:id="@+id/usernameTextView"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="46dp"
                android:layout_marginLeft="30dp"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                android:textColor="@color/grey"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/dateOfBirthTextView"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="@color/grey"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/grey"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="30dp"
                />
        </FrameLayout>

        <FrameLayout
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rectangle_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile image"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                />

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_marginTop="50dp"
                android:layout_width="350dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                />
        </FrameLayout>

        <Button
            android:id="@+id/btneditset"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/gradient_profile"
            android:fontFamily="@font/poppins_regular"
            android:text="Edit data"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            />



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>